{
  "name": "@ct/root",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-syntax-export-namespace-from": "^7.2.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-flow": "^7.0.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "@hot-loader/react-dom": "^16.8.6",
    "babel-loader": "^8.0.6",
    "babel-loader-lerna-cra": "^0.1.3",
    "babel-plugin-import-graphql": "^2.7.0",
    "dotenv-load": "^2.0.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.1",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "graphql-tag": "^2.10.1",
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "prisma": "^1.34.1",
    "react-hot-loader": "^4.12.10"
  },
  "workspaces": [
    "packages/**/*",
    "apps/*"
  ],
  "dependencies": {
    "babel-eslint": "^10.0.2",
    "core-js": "2.6.5",
    "flow-bin": "^0.102.0",
    "netlify-cli": "^2.11.26"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "babel-loader-lerna-cra": {
    "imports": "+(packages|apps)/**/*/src",
    "apps": "apps/*/src"
  },
  "scripts": {
    "start": "cd apps/docker && docker-compose up",
    "start:local": "lerna run start --parallel",
    "lint": "eslint --ext js,jsx apps",
    "test": "lerna run test --parallel",
    "deploy": "lerna run deploy",
    "deploy:staging": "lerna run deploy:staging",
    "bootstrap": "lerna bootstrap",
    "prisma-login": "prisma login"
  }
}
