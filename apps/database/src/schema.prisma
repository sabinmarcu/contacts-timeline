type Contact {
  id: ID! @id
  username: String! @unique
  phone: String! @unique
  name: String!
  avatar: String!
  cover: String!
}

type Message {
  id: ID! @id
  date: DateTime!
  text: String!
  from: Contact! @relation(name: "ContactA")
  to: Contact! @relation(name: "ContactB")
}

type History {
  id: ID! @id
  start: Message! @relation(name: "StartMessage")
  end: Message! @relation(name: "EndMessage")
}

type Snapshot {
  id: ID! @id
  conversations: [History!]!
}